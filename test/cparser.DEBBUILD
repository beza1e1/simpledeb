pkgname=cparser
pkgver=0.9.12
libfirmver=1.19.1
pkgrel=0
pkgdesc="intermediate representation and optimisations for compilers"
arch=("i386")
url="http://libfirm.org"
license=('GPL')

source=(
	"http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.bz2"
	"http://downloads.sourceforge.net/project/libfirm/libfirm/${libfirmver}/libfirm-${libfirmver}.tar.bz2"
)
md5sums=('6c936f67d34481ae53e0b68c0f148e0e' '2adb560c0249b0e03a5a3782f7523b21')

build() {
	# build libfirm
	cd ${srcdir}/${pkgname}-${pkgver}
	mv ../libfirm-${libfirmver} libfirm
	cd libfirm
	./configure
	make -j3
	mv ir/.libs/libfirm.a ${srcdir}/${pkgname}-${pkgver}/libfirm.a

	# build cparser
	cd ${srcdir}/${pkgname}-${pkgver}
	cat >config.mak <<EOF
FIRM_CFLAGS=-Ilibfirm/include
LIBFIRM_FILE=libfirm.a
FIRM_LIBS=-lm libfirm.a
EOF
	make -j3

	# install cparser
	mkdir -p ${pkgdir}/usr/bin
	cp ${srcdir}/${pkgname}-${pkgver}/build/cparser ${pkgdir}/usr/bin/
}
