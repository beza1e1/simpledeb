pkgname=libfirm
pkgver=1.19.1
pkgrel=0
pkgdesc="intermediate representation and optimisations for compilers"
arch=("i386")
url="http://libfirm.org"
license=('GPL')
depends=()

source=("http://downloads.sourceforge.net/project/libfirm/libfirm/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('1d303b067c09ab6ca305fb527036aeab')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	mkdir -p ${pkgdir}/usr/lib
	./configure --prefix=/usr
	make -j3
	make DESTDIR=${pkgdir} install
}
